# Contributor: starwarsfan <yves@eisfair.org>
# Maintainer: starwarsfan <yves@eisfair.org>
pkgname=lprng
pkgver=1.0.0
pkgrel=0
pkgdesc="LPRng Printer Spooler"
url="http://www.lprng.org/"
arch="all"
license="GPL"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages="${pkgname}-doc"
source="http://downloads.sourceforge.net/project/lprng/lprng/lprng-3.8.C.tar.gz?r=http%3A%2F%2Fsourceforge.net%2Fprojects%2Flprng%2F&ts=1388256879&use_mirror=garr"

_builddir="$srcdir/${pkgname}-$pkgver"

prepare() {
	local i
	ln -s inadyn "$_builddir"
	cd "$_builddir"
	for i in ${source}; do
		case ${i} in
		*.patch) msg ${i}; patch -p1 -i "$srcdir"/${i} || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	make || return 1
}

package() {
	cd "$_builddir"
#	install -D -m755 ${_builddir}/bin/linux/...  ${pkgdir}/usr/bin/${pkgname} || return 1
}

doc() {
    mkdir ${pkgdir}/../lprng-doc
    cd "$_builddir"
}
