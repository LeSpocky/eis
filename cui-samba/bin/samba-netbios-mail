# $1 from (%f)
# $2 message_file (%s)

case $# in
2)
    from="$1"
    message_file="$2"
    /bin/mail -s "message from $from" root < "$message_file"; /bin/rm "$message_file" &
    ;;
*)
    exit 1
    ;;
esac

exit 0
