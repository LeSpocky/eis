# set -x
. /var/install/include/eislib

mountbin='/bin/mount'
tty=`tty`

"$mountbin" -t smbfs,cifs |
(
    clrhome
    mecho --info "List mounted SMB Filesystems"
    echo

    techo begin 2 48 30
    techo row '' -info "SMB Filesystem" -info "Mountpoint"
    row=4

    while read service on mountpoint type vfstype rest
    do
        techo row '' "$service" "$mountpoint"
        row=`expr $row + 1`

        if [ $row = 21 ]
        then
            echo
            anykey <$tty
            clrhome
            mecho --info "List mounted SMB Filesystems"
            echo
            techo begin 2 48 30
            techo row '' -info "SMB Filesystem" -info Mountpoint
            row=4
        fi
    done
)

echo
anykey
