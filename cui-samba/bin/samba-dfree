#/bin/df $1 | tail -1 | awk '{print $2" "$4}'

case $# in
0)
    echo "usage: /var/install/bin/samba-dfree filename" >&2
    exit 1
    ;;
esac

set -f # kein globbing
#set -- `/bin/df -P "$1" | sed -n '$p'`
set -- `/bin/df -P "$*" | sed -n '$p'`
echo "$2 $4"
