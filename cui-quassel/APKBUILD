# Contributor: starwarsfan <yves@eisfair.org>
# Maintainer: starwarsfan <yves@eisfair.org>
pkgname=cui-quassel
pkgver=1.0.0
pkgrel=2
pkgdesc="CUI Setup for quassel core"
url="http://www.quassel-irc.org"
arch="noarch"
license="GPL"
depends="cuimenu quassel"
depends_dev=""
makedepends="$depends_dev"
install="$pkgname.post-install $pkgname.post-deinstall"
subpackages=""
source="${pkgname}.txt
        ${pkgname}.sh
        ${pkgname}-update.sh
        ${pkgname}.help
        ${pkgname}.setup.services.quassel.menu
"

_builddir=
prepare() {
	local i
	cd "$_builddir"
	for i in $source ; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
}

package() {
	cd "$_builddir"
	cd ${startdir}/dialog.d
	for currentDialogScript in `ls` ; do
		install -D -m755 $currentDialogScript ${pkgdir}/var/install/dialog.d/$currentDialogScript || return 1
	done
	cd -
	install -D -m644 ${srcdir}/${pkgname}.txt                               ${pkgdir}/usr/share/doc/phpmyadmin/quassel.txt || return 1
	install -D -m755 ${srcdir}/${pkgname}.sh                                ${pkgdir}/var/install/config.d/quassel.sh || return 1
	install -D -m755 ${srcdir}/${pkgname}-update.sh                         ${pkgdir}/var/install/config.d/quassel-update.sh || return 1
	install -D -m644 ${srcdir}/${pkgname}.help                              ${pkgdir}/var/install/help/quassel || return 1
	install -D -m644 ${srcdir}/${pkgname}.setup.services.quassel.menu       ${pkgdir}/var/install/menu/setup.services.quassel.menu || return 1
}
md5sums=""
