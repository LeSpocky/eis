BIND_QUERY  = 'any|localnets|localhost'
             : 'Only: any, localnets or localhost'
BIND_NUMERIC = '[0-9]{1,3}'
             : 'Numeric value with range 0 - 999'
BIND_TRANSFER = 'any|localnets|nslist|none'
             : 'Only: any, localnets, nslist or none'
BIND_HOSTNAME = '(RE:EHOSTNAME)|([*])'
             : 'Only: blank, hostname or wildcard (*)'
