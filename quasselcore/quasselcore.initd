#!/sbin/runscript
# quasselcore init.d file for alpine linux.

daemon=/usr/bin/quasselcore
FB_OPTS="-pidfile /var/run/quasselcore.pid -start -forever"

depend() {
	need net
	after firewall
}

start() {
	ebegin "Starting quassel core"
		start-stop-daemon --oknodo --start \
			--pidfile /var/run/quasselcore.pid \
			--chuid quasselcore --startas ${daemon} -- ${FB_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping quassel core"
		start-stop-daemon --stop --pidfile /var/run/quasselcore.pid \
			--oknodo
	eend $?
}
