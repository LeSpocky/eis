# Contributor: starwarsfan <yves@eisfair.org>
# Maintainer:
pkgname=inadyn
pkgver=1.99.15
pkgrel=0
pkgdesc="Dynamic DNS client"
url="http://inatech.eu/inadyn/readme.html"
arch="all"
license="GPL"
depends="openssl"
depends_dev="linux-headers openssl-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-doc"
source="ftp://troglobit.com/inadyn/inadyn-${pkgver}.tar.xz
	lite.Makefile.patch
	lite.h.patch
	error.h
	"

_builddir="$srcdir/${pkgname}-$pkgver"

prepare() {
	local i
	ln -s inadyn "$_builddir"
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
	
	# install our error.h
	cp "$srcdir"/error.h "$srcdir"/inadyn-1.99.15/libite/error.h || return 1
}

build() {
	cd "$_builddir"
	./configure --enable-openssl --prefix=/usr || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

