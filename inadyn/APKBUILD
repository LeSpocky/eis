# Contributor: starwarsfan <yves@eisfair.org>
# Maintainer:
pkgname=inadyn
pkgver=1.96.2
pkgrel=0
pkgdesc="Dynamic DNS client"
url="http://inatech.eu/inadyn/readme.html"
arch="all"
license="GPL"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages="${pkgname}-doc"
source="http://inatech.eu/inadyn/inadyn.v${pkgver}.zip
       ${pkgname}.initd"

_builddir="$srcdir/${pkgname}-$pkgver"

prepare() {
	local i
	ln -s inadyn "$_builddir"
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	make || return 1
}

package() {
	install -D -m755 "$srcdir"/$pkgname.initd       ${pkgdir}/etc/init.d/$pkgname || return 1
	cd "$_builddir"
	install -D -m755 ${_builddir}/bin/linux/inadyn  ${pkgdir}/usr/bin/${pkgname} || return 1
}

doc() {
#    ln -s inadyn/ "$_builddir"
    mkdir ${pkgdir}/../inadyn-doc
    cd "$_builddir"
}

md5sums="a4657141ea437a3bac781d052af6cd7a  inadyn.initd"
sha256sums="e19c3774c68f3417db50b2f94bed2fe82998c66ee2e25f951cfa830b87ddcdaa  inadyn.initd"
sha512sums="4c1ab6ace8c316cfae20fe385c2bb32421f365b23abcaca053909fb8f84d1263f53ff08bf180a6315f464984ab8aefc9ee4b8e2926d91796d33ffa465319c1c3  inadyn.initd"
