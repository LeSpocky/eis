# Contributor: starwarsfan <yves@eisfair.org>
# Maintainer:
pkgname=inadyn
pkgver=1.96.2
pkgrel=0
pkgdesc="Dynamic DNS client"
url="http://inatech.eu/inadyn/readme.html"
arch="all"
license="GPL"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
source="http://download.eisfair.org/src/${pkgname}.v${pkgver}.zip"

_builddir="$srcdir/${pkgname}-$pkgver"

prepare() {
	local i
	ln -s inadyn "$_builddir"
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	make || return 1
}

package() {
	cd "$_builddir"
	install -D -m755 ${_builddir}/bin/linux/inadyn  ${pkgdir}/usr/bin/${pkgname} || return 1
}

md5sums="d394ed5ab7a9313992bdc62c412cb369  inadyn.v1.96.2.zip"
sha256sums="cabaf79a467918dbdafa84792c963047692cd91283a808981736f78c95751650  inadyn.v1.96.2.zip"
sha512sums="d4e591271b9f2d7996b117d474894e44a615df17bba491a2be6494163b8d8bf0c705f1aa597fd9b846dd383b07d084e32a3ca0c003c1ef04ae6d335e29aaa014  inadyn.v1.96.2.zip"
