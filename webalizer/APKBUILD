# Contributor: jv <jens@eisfair.org>
# Maintainer:
pkgname=webalizer
pkgver=2.23
pkgrel=0
pkgdesc="Webalizer"
url="http://www.webalizer.org/"
arch="all"
license="GPL"
depends=""
depends_dev="libdb5.3-dev libgd-dev libpng-dev jpeg-dev geoip-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-doc"
source="
	ftp://ftp.mrunix.net/pub/webalizer/webalizer-2.23-05-src.tgz
	${pkgname}-run"

_builddir="${srcdir}/${pkgname}-${pkgver}-05"

prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--bindir=/usr/bin \
		--libdir=/usr/lib \
		--with-piddir=/run \
		--mandir=/usr/share/man \
		--sysconfdir=/etc/webalizer \
		--includedir=/usr/include \
		--enable-dns \
		--enable-bz2 \
		--enable-geoip  || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make -j1 DESTDIR="$pkgdir" install || return 1
	install -m755 -D "$srcdir"/${pkgname}-run \
		"$pkgdir"/usr/bin/${pkgname}-run || return 1
}

