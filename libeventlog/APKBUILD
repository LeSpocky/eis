# Contributor: jv jens@eisfair.org
# Maintainer: jv jens@eisfair.org
pkgname=libeventlog
pkgver=0.2.12
pkgrel=1
pkgdesc="Syslog event logger library"
url="http://www.balabit.com"
arch="all"
license="BSD-3-clause"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://www.balabit.com/downloads/files/eventlog/${pkgver%.*}/eventlog_${pkgver}.tar.gz"

_builddir="$srcdir/eventlog-$pkgver"

prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make -j1 DESTDIR="$pkgdir" install || return 1
	rm -f  ${pkgdir}/usr/lib/*.la
	return 0
}

md5sums="3d6ebda8a161d36cb40d09328f78786b  eventlog_0.2.12.tar.gz"
sha256sums="494dac8e01dc5ce323df2ad554d94874938dab51aa025987677b2bc6906a9c66  eventlog_0.2.12.tar.gz"
sha512sums="a681ab2961f5bf38e106a5b0b4492e74098808e2bf1a100f545736902649c705db124c0847796a47485faa8b0befe691a789d752f313c5b65ad50ed2763d2cce  eventlog_0.2.12.tar.gz"
