# Contributor: Jens Vehlhaber jv <jens@eisfair.org>
# Maintainer: Jens Vehlhaber jv <jens@eisfair.org>
pkgname=mysql2fetchmail
pkgver=1.0.0
pkgrel=0
pkgdesc="Create fetchmail config from MySQL record"
url="http://www.eisfair.org"
arch="all"
license="GPLv2"
depends=""
depends_dev="mysql-dev"
makedepends="$depends_dev"
install=""
subpackages=""
source=""

_builddir="$srcdir/$pkgname"

prepare() {
	cp -r  ${startdir}/mysql2fetchmail "$srcdir/"
}

build() {
	cd "$_builddir"
	make -j1 -s || return 1
}

package() {
	cd "$_builddir"
	install -m755 -D "$_builddir"/$pkgname \
		"$pkgdir"/usr/bin/$pkgname || return 1
}
