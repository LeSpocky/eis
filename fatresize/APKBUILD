# Maintainer: Jens Vehlhaber <jens@eisfair.org>
pkgname=fatresize
pkgver=1.0.2
pkgrel=0
pkgdesc="FAT16/FAT32 filesystem resizer"
url="https://sourceforge.net/projects/fatresize/"
arch="all"
license="GPL"
depends="parted-dev util-linux-dev"
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="
	http://downloads.sourceforge.net/sourceforge/fatresize/fatresize-$pkgver.tar.bz2
	01-pkg-config.patch
	02-libparted-3.1.patch
	03-ped_free.patch
	"

_builddir="${srcdir}/${pkgname}-${pkgver}"

prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	autoreconf -fiv
	./configure \
	    --prefix= \
	    --disable-nls \
	    --disable-static
	make || return 1
}

package() {
	cd "$_builddir"
	mkdir -p "$pkgdir"
	mkdir -p /home/jens/eis/fatresize/pkg/fatresize/sbin
	make -j1 DESTDIR="$pkgdir" install || return 1
}

