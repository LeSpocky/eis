PROGRAM=owfs
PIDFILE=${PIDFILE:-/run/owfs/${PROGRAM}.pid}
OWUID=${OWUID:-owfs}
OWGID=${OWGID:-owfs}

depend() {
	need net
	use logger owserver
}

[ -f /etc/owfs.conf ] && CONFFILE="-c /etc/owfs.conf"

start_pre() {
	checkpath --directory /run/owfs --owner ${OWUID}
}

start() {
	ebegin "One Wire file system"
	/sbin/modprobe -q fuse
	start-stop-daemon --start --exec /usr/bin/${PROGRAM} \
		--pidfile ${PIDFILE} -c ${OWUID}:${OWGID} -- \
		--pid_file ${PIDFILE} \
		--background --error_print 1 \
		${OWFS_OPTS:--m /var/lib/owfs/mnt --allow_other -s 127.0.0.1:4304} ${CONFFILE}
	eend $?
}

stop() {
	ebegin "Stopping ${PROGRAM}"
	start-stop-daemon --stop --exec /usr/bin/${PROGRAM} \
		--pidfile ${PIDFILE} -u ${OWUID}
	eend $?
}
