+*/
+
+typedef struct node_t {
+	void *key;
+	struct node_t *left, *right;
+} node;
+
+static void tdestroy_recurse_(node * root, void *freefct)
+{
+	if (root->left != NULL) {
+		tdestroy_recurse_(root->left, freefct);
+#ifdef DELETE_KEY
+		free(root->left);
+		root->left = NULL;
+#endif
+	}
+	if (root->right != NULL) {
+		tdestroy_recurse_(root->right, freefct);
+#ifdef DELETE_KEY
+		free(root->right);
+		root->right = NULL;
+#endif
+	}
