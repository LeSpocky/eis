# Contributor: jv <jens@eisfair.org>
# Maintainer: jv <jens@eisfair.org>
pkgname=dovecot-pigeonhole
pkgver=0.4.2
pkgrel=0
pkgdesc="Pigeonhole for Dovecot - sieve service"
url="http://pigeonhole.dovecot.org"
arch="all"
license="GNU"
depends="dovecot>=2.2.7"
depends_dev="openssl-dev dovecot-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-doc"
source="http://pigeonhole.dovecot.org/releases/2.2/dovecot-2.2-pigeonhole-${pkgver}.tar.gz
        http://pigeonhole.dovecot.org/releases/2.1/dovecot-2.1-pigeonhole-0.3.6.tar.gz
"

determineBuildDir() {
    currentRepo=`grep -v '^#\|^$' /etc/apk/repositories | head -n 1`
    determinedVersion=${currentRepo%/*}
    determinedVersion=${determinedVersion##*/}

    if [ "$determinedVersion" = 'v2.6' ] ; then
        _builddir="$srcdir/dovecot-2.1-pigeonhole-0.3.6"
    else
        _builddir="$srcdir/dovecot-2.2-pigeonhole-$pkgver"
    fi
}

prepare() {
    determineBuildDir
	local i
	cd ${_builddir}
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i ${srcdir}/$i || return 1;;
		esac
	done
	sleep 1
}

build() {
    determineBuildDir
	cd ${_builddir}
	export LDFLAGS="-Wl,-rpath=/usr/lib/dovecot"
	./configure --prefix=/usr \
	--libexec=/usr/sbin \
	--with-dovecot=/usr/lib/dovecot \
	--with-managesieve=yes \
	--disable-static || return 1
	sleep 1
	make -j1 || return 1
}

package() {
    determineBuildDir
	cd ${_builddir}
	make -j1 DESTDIR="$pkgdir" install || return 1
	rm -f ${pkgdir}/usr/lib/dovecot/*.la \
		rm -f ${pkgdir}/usr/lib/dovecot/*/*.la
	mkdir -p ${pkgdir}/etc/dovecot/conf.d
	cp -f ${pkgdir}/usr/share/doc/dovecot/example-config/conf.d/* ${pkgdir}/etc/dovecot/conf.d/
	rm -rf ${pkgdir}/usr/include
}

