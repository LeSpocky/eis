# Contributor:
# Maintainer:team@eisfair.org
pkgname=cuimenu
pkgver=2.0.0
pkgrel=5
pkgdesc="Eisfair CUI base menu"
url="http://www.eisfair.org"
arch="noarch"
license="GPL"
depends="cuimenu-bin bash syslog-ng logrotate fcron"
depends_dev=""
makedepends=""
install="$pkgname.pre-install $pkgname.pre-upgrade $pkgname.post-install"
subpackages=""
source=""

_builddir="$srcdir/$pkgname"

prepare() {
	mkdir -p ${startdir}/pkg/${pkgname}
}

build() {
	echo ""
}

package() {
	mkdir -p ${pkgdir}
	cp -r ${startdir}/menus/* ${pkgdir}/
	chmod 0770 ${pkgdir}/etc/default.d
	chmod 0755 ${pkgdir}/usr/sbin/*
	chmod 0755 ${pkgdir}/var/install/bin/*
	chmod 0755 ${pkgdir}/var/install/config.d/*
	chmod 0644 ${pkgdir}/var/install/include/*
}
