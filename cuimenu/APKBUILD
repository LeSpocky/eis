# Contributor:
# Maintainer:team@eisfair.org
pkgname=cuimenu
pkgver=2.0.0
pkgrel=0
pkgdesc="Eisfair CUI basis menu"
url="http://www.eisfair.org"
arch="all"
license="GPL"
depends="cuimenu-bin bash syslog-ng"
depends_dev=""
makedepends=""
install="$pkgname.pre-install $pkgname.pre-upgrade $pkgname.post-install"
subpackages=""
source=""

_builddir="$srcdir/$pkgname"

prepare() {
	local i
	mkdir -p $_builddir
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
}

package() {
	cp -r ${startdir}/menus/* ${pkgdir}/
	chmod 0755 ${pkgdir}/var/install/bin/*
	chmod 0644 ${pkgdir}/var/install/include/*
}

