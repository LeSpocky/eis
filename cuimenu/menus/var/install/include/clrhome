#----------------------------------------------------------------------------
# /usr/local/bin/clrhome - clear home
#
# Creation:     2001-09-29 fm  Frank Meyer <frank@eisfair(dot)org>
# Creation:     2004-09-29 max
# Last Update: $Id: clrhome 24471 2012-11-14 21:14:01Z jv $
#
#----------------------------------------------------------------------------

#----------------------------------------------------------------------------
# usage
#     clrhome [--tty|--file] 
#----------------------------------------------------------------------------
clrhome()
{
    local _clrhome_mode="$_EISLIB_PRINTMODE"
    while [ 1 ]
    do
        case "$1"
        in
            --tty)  _clrhome_mode="tty";   shift;;
            --file) _clrhome_mode="file";  shift;;
            *)      break;;
        esac
    done
    if [ "$_clrhome_mode" = "file" ]
    then
        echo -e "\n----------------------------------------------------------------------\n"
    else
        echo -e "\033[H\033[2J\c"
    fi
}
