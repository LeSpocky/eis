# Apk repository configuration
# ----------------------------------------------------------------------------
APK_REPOSITORY_N='4'                   # Number of repositories to configure
APK_REPOSITORY_1_NAME='cd rom'         # Use a name what ever you want. The
                                       # entered value is only for your overview
APK_REPOSITORY_1_ACTIVE='no'           # Should this repository be used at the
                                       # moment? Use: yes or no
APK_REPOSITORY_1_URL='/media/cdrom/apks'
                                       # URL to access the repository

APK_REPOSITORY_2_NAME='alpine packages'
APK_REPOSITORY_2_ACTIVE='yes'
APK_REPOSITORY_2_URL='http://dl-5.alpinelinux.org/alpine/v2.7/main'

APK_REPOSITORY_3_NAME='eisfair-ng packages'
APK_REPOSITORY_3_ACTIVE='yes'
