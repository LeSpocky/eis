# Contributor: jv <jens@eisfair.org>
# Maintainer:
pkgname=libmilter-dev
pkgver=8.14.3
pkgrel=1
pkgdesc="Libmilter with threads"
url="http://j-chkmail.ensmp.fr/download/libmilter/"
arch="all"
license="GPLv2"
depends=""
depends_dev="m4"
makedepends="$depends_dev"
install=""
subpackages=""
source="http://www.j-chkmail.org/download/libmilter/libmilter-workers-${pkgver}-1.tgz
	"

_builddir="${srcdir}/libmilter-workers-${pkgver}-1"

prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./Build -c
}

package() {
	cd "$_builddir"
	mkdir -p ${pkgdir}/usr/lib
	make DESTDIR=${pkgdir} install
}

