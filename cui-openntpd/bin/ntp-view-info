# read eislib
. /var/install/include/eislib

clrhome
if [ -f /etc/eisfair-system ]
then
  case `cat /etc/eisfair-system`
    in
      eisfair-2 | eisxen-1 | eisxen-2 )
        /usr/bin/ntpq -c clocklist
        mecho
        /usr/bin/ntpq -c peers
        mecho
      ;;
      eisfair-1 )
        /usr/sbin/ntpq -c clocklist
        mecho
        /usr/sbin/ntpq -c peers
        mecho
      ;;
  esac
else
    /usr/sbin/ntpq -c clocklist
    mecho
    /usr/sbin/ntpq -c peers
    mecho
fi
anykey
